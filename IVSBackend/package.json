{
  "name": "ivs-streaming-backend",
  "version": "1.0.0",
  "description": "AWS IVS streaming backend for Substream SDK",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack -p 3000",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
